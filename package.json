{
  "name": "proofoffit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:ui && cd apps/web && npm run build",
    "build:ui": "cd packages/ui && npm run build",
    "build:web": "npm run build:ui && cd apps/web && npm run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "ci": "npm run lint && npm run test && npm run build",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "audit": "tsx scripts/audit.ts",
    "preflight": "bash ./scripts/preflight.sh",
    "validate-migrations": "bash ./scripts/validate-migrations.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "warmup:web": "tsx scripts/wait-for-health.ts --url=http://localhost:3000/api/health"
  },
  "engines": {
    "node": ">=22 <24"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/nextjs-vite": "^9.1.13",
    "@types/node": "^24.9.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.38.0",
    "playwright": "^1.56.1",
    "storybook": "^9.1.10",
    "tsx": "^4.7.0",
    "turbo": "^2.5.8",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@9.6.7",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cheerio": "1.1.2",
    "p-limit": "^7.2.0",
    "prisma": "^6.16.2",
    "robots-parser": "^3.0.1",
    "vercel": "^48.5.0"
  },
  "overrides": {
    "esbuild": "0.25.11",
    "path-to-regexp": "6.3.0",
    "undici": "6.22.0"
  }
}
