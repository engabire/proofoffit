{
  "name": "proofoffit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:ui && cd apps/web && npm run build",
    "build:ui": "cd packages/ui && npm run build",
    "build:web": "cd apps/web && npm run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "preflight": "bash ./scripts/preflight.sh",
    "validate-migrations": "bash ./scripts/validate-migrations.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/nextjs-vite": "^9.1.10",
    "@types/node": "^24.7.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.37.0",
    "playwright": "^1.56.0",
    "storybook": "^9.1.10",
    "turbo": "^2.5.8",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@9.6.7",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "cheerio": "^1.1.2",
    "p-limit": "^7.1.1",
    "prisma": "^6.17.1",
    "robots-parser": "^3.0.1"
  }
}
